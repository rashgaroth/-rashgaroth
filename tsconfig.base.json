{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2022", "dom"],
    "types": ["node"],
    "baseUrl": ".",
